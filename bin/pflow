// configure autoloading
require_once realpath(dirname(__FILE__) . '/../src/autoload.php');

// run command line interface
$analyzer = new pFlow\Analyzer();
$input = new ezcConsoleInput();
$cli = new pFlow\Cli($analyzer, $input);
$cli->run();
$analyzer->analyze();